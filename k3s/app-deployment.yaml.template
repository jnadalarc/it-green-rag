apiVersion: apps/v1
kind: Deployment
metadata:
  name: ${APP_NAME}
spec:
  selector:
    matchLabels:
      app: ${APP_NAME}
  replicas: 1
  template:
    metadata:
      labels:
        app: ${APP_NAME}
    spec:
      containers:
        - image: ${IMAGE}
          imagePullPolicy: Always
          name: ${APP_NAME}
          ports:
            - containerPort: ${APP_PORT}
              name: ${APP_PORT}tcp
              protocol: TCP
          env:
            - name: LLAMA_URL
              value: "http://ollama-deployment:11434"
            - name: DOCS_DIR
              value: "/docs"
            - name: RAG_DB_PATH
              value: "/rag/rag.db"
          
          # --- NOU: SONDES DE SALUT PER A KUBERNETES ---
          startupProbe:
            httpGet:
              path: / # Comprovem la pàgina principal
              port: ${APP_PORT}
            failureThreshold: 30 # Falla després de 30 intents (30 * 10s = 5 minuts)
            periodSeconds: 10
          readinessProbe:
            httpGet:
              path: / # Un cop arrencat, comprovem que segueixi llest
              port: ${APP_PORT}
            initialDelaySeconds: 5
            periodSeconds: 5
          # ----------------------------------------------
            
          volumeMounts:
            - mountPath: /docs
              name: rag-docs-volume
            - mountPath: /rag
              name: rag-db-volume
      imagePullSecrets:
        - name: registry-wattega-auth
      volumes:
        - name: rag-docs-volume
          hostPath:
            path: /srv/llm-itgreen/docs
            type: DirectoryOrCreate
        - name: rag-db-volume
          hostPath:
            path: /srv/llm-itgreen/rag
            type: DirectoryOrCreate